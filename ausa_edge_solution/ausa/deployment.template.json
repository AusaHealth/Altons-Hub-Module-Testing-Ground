{
  "$schema-template": "4.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "iotubhub": {
                "username": "$CONTAINER_REGISTRY_USERNAME_iotubhub",
                "password": "$CONTAINER_REGISTRY_PASSWORD_iotubhub",
                "address": "iotubhub.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.5",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.5",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "broker_alton": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.broker_alton}",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "2883/tcp": [
                      {
                        "HostPort": "2883"
                      }
                    ]
                  }
                }
              }
            }
          },
          "flutter_subscriber": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "env": {
              "HOST": {
                "value": "broker_alton"
              },
              "MAIN_SERVER": {
                "value": "api.ausa.health"
              }
            },
            "settings": {
              "image": "${MODULES.flutter_subscriber}",
              "createOptions": {}
            }
          },
          "data_storage": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.data_storage}",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "4001/tcp": [
                      {
                        "HostPort": "4001"
                      }
                    ],
                    "4002/tcp": [
                      {
                        "HostPort": "4002"
                      }
                    ]
                  },
                  "Binds": [
                    "/:/rqlite/file/db"
                  ]
                }
              }
            }
          },
          "sync_to_cloud": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "env": {
              "HOST": {
                "value": "data_storage"
              }
            },
            "settings": {
              "image": "${MODULES.sync_to_cloud}",
              "createOptions": {}
            }
          },
          "data_storage_subscriber": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "env": {
              "DATABASE_HOST": {
                "value": "data_storage"
              },
              "BROKER_HOST": {
                "value": "broker_alton"
              }
            },
            "settings": {
              "image": "${MODULES.data_storage_subscriber}",
              "createOptions": {}
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "broker_altonToIoTHub": "FROM /messages/modules/broker_alton/outputs/* INTO $upstream",
          "flutter_subscriberToIoTHub": "FROM /messages/modules/flutter_subscriber/outputs/* INTO $upstream",
          "data_storageToIoTHub": "FROM /messages/modules/data_storage/outputs/* INTO $upstream",
          "sync_to_cloudToIoTHub": "FROM /messages/modules/sync_to_cloud/outputs/* INTO $upstream",
          "data_storage_subscriberToIoTHub": "FROM /messages/modules/data_storage_subscriber/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}